{
  "name": "@nostream-ilp/app-nostream",
  "version": "2.1.0",
  "type": "module",
  "description": "A Nostr relay with ILP payment integration",
  "main": "src/index.ts",
  "supportedNips": [
    1,
    2,
    4,
    9,
    11,
    12,
    15,
    16,
    20,
    22,
    28,
    33,
    40
  ],
  "supportedNipExtensions": [
    "11a"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameri/nostream.git",
    "directory": "packages/app-nostream"
  },
  "homepage": "https://github.com/cameri/nostream#readme",
  "bugs": {
    "url": "https://github.com/cameri/nostream/issues"
  },
  "license": "MIT",
  "scripts": {
    "dev": "node -r ts-node/register src/index.ts",
    "clean": "rimraf ./{dist,.nyc_output,.test-reports,.coverage}",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "prestart": "npm run build",
    "start": "cd dist && node src/index.js",
    "build:check": "npm run build -- --noEmit",
    "lint": "eslint --ext .ts ./src ./test",
    "lint:fix": "npm run lint -- --fix",
    "db:migrate": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:dassie-integration": "vitest run test/btp-nips/integration/dassie-integration.spec.ts --reporter=verbose",
    "test:n-peer": "vitest run test/btp-nips/n-peer/**/*.spec.ts --reporter=verbose",
    "test:n-peer:tier1": "vitest run test/btp-nips/benchmarks/mesh-scalability.spec.ts -t '10-Node' --reporter=verbose",
    "test:n-peer:tier2": "vitest run test/btp-nips/benchmarks/ --reporter=verbose",
    "test:n-peer:tier3": "vitest run test/btp-nips/benchmarks/ --reporter=verbose --testTimeout=600000",
    "test:n-peer:stress": "vitest run test/btp-nips/benchmarks/mesh-scalability.spec.ts -t '100-Node' --reporter=verbose",
    "test:n-peer:debug": "DEBUG=* vitest run test/btp-nips/n-peer/**/*.spec.ts --reporter=verbose",
    "test:n-peer:watch": "vitest watch test/btp-nips/n-peer/**/*.spec.ts",
    "benchmark": "tsx ../../scripts/run-benchmarks.ts",
    "benchmark:compare": "tsx ../../scripts/detect-regression.ts",
    "benchmark:trends": "tsx ../../scripts/generate-trends.ts",
    "benchmark:archive": "tsx ../../scripts/archive-benchmarks.ts"
  },
  "dependencies": {
    "@akashnetwork/chain-sdk": "1.0.0-alpha.0",
    "@cosmjs/amino": "^0.37.0",
    "@cosmjs/crypto": "^0.32.4",
    "@cosmjs/encoding": "^0.32.4",
    "@cosmjs/proto-signing": "^0.32.4",
    "@cosmjs/stargate": "^0.32.4",
    "@noble/curves": "^1.5.0",
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "1.7.1",
    "@nostream-ilp/lib-payment-types": "workspace:^",
    "@trpc/client": "^11.7.2",
    "axios": "^1.7.7",
    "bech32": "2.0.0",
    "body-parser": "1.20.1",
    "debug": "4.3.4",
    "dinero.js": "2.0.0-alpha.13",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-rate-limit": "^8.2.1",
    "fastify": "^5.6.2",
    "helmet": "6.0.1",
    "joi": "17.7.0",
    "js-yaml": "4.1.0",
    "knex": "2.4.2",
    "pg": "8.9.0",
    "pg-query-stream": "4.3.0",
    "pino": "^10.1.0",
    "prom-client": "^15.1.3",
    "ramda": "0.28.0",
    "redis": "4.5.1",
    "rxjs": "7.8.0",
    "tor-control-ts": "^1.0.0",
    "viem": "^2.41.2",
    "ws": "^8.18.0",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/debug": "4.1.12",
    "@types/express": "4.17.15",
    "@types/js-yaml": "4.0.5",
    "@types/node": "22.19.1",
    "@types/pg": "^8.6.5",
    "@types/ramda": "^0.28.13",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.13",
    "chai": "^4.5.0",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "rimraf": "^3.0.2",
    "simple-statistics": "^7.8.8",
    "supertest": "^7.1.4",
    "ts-node": "10.9.1",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.13"
  }
}
